generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id                  String    @id @default(cuid())
  messageId           String    @unique // Gmail message ID to prevent duplicates
  amount              Float?
  description         String?
  time                DateTime?
  location            String?
  rawText             String?
  beneficiaryName     String?
  beneficiaryBankName String?
  chargeCode          String?
  chargeAmount        Float?
  createdAt           DateTime  @default(now())
}

model User {
  id                 String  @id @default(uuid())
  email              String  @unique
  password           String?
  name               String?
  picture            String?
  accessToken        String?
  refreshToken       String?
  hashedRefreshToken String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
