generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id                  String    @id @default(cuid())
  messageId           String    @unique // Gmail message ID to prevent duplicates
  amount              Float?
  description         String?
  time                DateTime?
  location            String?
  rawText             String?
  beneficiaryName     String?
  beneficiaryBankName String?
  chargeCode          String?
  chargeAmount        Float?
  createdAt           DateTime  @default(now())

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])
}

model User {
  id                 String  @id @default(uuid())
  email              String  @unique
  password           String?
  name               String?
  picture            String?
  accessToken        String?
  refreshToken       String?
  hashedRefreshToken String?
  twoFactorSecret    String?
  isTwoFactorEnabled Boolean @default(false)
  role               Int     @default(1)

  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  categories Category[]

  @@index([role, createdAt])
}

model Category {
  id          String  @id @default(cuid())
  name        String  @unique
  description String?
  image       String?
  type        Int     @default(1)

  createdBy String?
  user      User?   @relation(fields: [createdBy], references: [id])

  transactions Transaction[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
